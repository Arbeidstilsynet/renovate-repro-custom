{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "**/[Dd]ockerfile*",
        "**/[Cc]ontainerfile*",
        "**/*.[Dd]ockerfile*",
        "**/*.[Cc]ontainerfile*"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>[a-z-]+?) depName=(?<depName>[^\\s]+)(?: versioning=(?<versioning>[^\\s]+))?\\n(?:ENV|ARG) [A-Za-z0-9_]+_VERSION=[\"']?(?<currentValue>[^\"'\\s]+)"
      ]
    }
  ]
}
